[Unit]
Description=Mediawiki Citoid Service
Documentation=https://www.mediawiki.org/wiki/Citoid
After=network.target

[Service]
User=citoid
Group=citoid
SyslogIdentifier=citoid
WorkingDirectory=/srv/citoid
ExecStart=/usr/bin/node /srv/citoid/server.js -c /etc/mediawiki/citoid/config.yaml
KillMode=process
Restart=always
PrivateTmp=true

[Install]
WantedBy=multi-user.target
