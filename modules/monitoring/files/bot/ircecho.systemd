[Unit]
Description=ircecho
After=network.target

[Service]
User=root
Group=root
Type=simple
EnvironmentFile=-/etc/default/ircecho
ExecStart=/usr/local/bin/ircecho --ident_passwd_file=/etc/defaults/ircecho_password --infile=${INFILE} $CHANS $NICK $NICK_FOR_PASS $SERVER
Restart=always
RestartSec=10s

[Install]
WantedBy=multi-user.target
