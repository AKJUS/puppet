[Unit]
Description=Prometheus exporter for php-fpm metrics
Documentation=https://github.com/hipages/php-fpm_exporter

[Service]
Restart=always
User=www-data
ExecStart=/usr/local/bin/prometheus-phpfpm-exporter server --phpfpm.scrape-uri="unix:///run/php/php7.2-fpm.sock;/php_status" --phpfpm.fix-process-count=true
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
