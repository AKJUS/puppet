[Unit]
Description=Prometheus exporter for php-fpm metrics
Documentation=https://github.com/hipages/php-fpm_exporter

[Service]
Restart=always
User=www-data
Environment="PHP_FPM_FIX_PROCESS_COUNT=1"
ExecStart=/usr/local/bin/prometheus-phpfpm-exporter server --phpfpm.scrape-uri="tcp://127.0.0.1:80/php_status"
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
