-- Grants for 'mediawiki'@''

GRANT CREATE, PROCESS
    ON *.* TO 'mediawiki'@'%'
    IDENTIFIED BY '<%= scope.lookupvar('private::mariadb::mediawiki_password') %>';

GRANT SELECT, INSERT, UPDATE, DELETE
    ON `%wik%`.* TO 'mediawiki'@'%';

GRANT SELECT, INSERT, UPDATE, DELETE
    ON `centralauth`.* TO 'mediawiki'@'%';

-- Grants for 'wikiadmin'@''

GRANT CREATE, PROCESS
    ON *.* TO 'wikiadmin'@'%'
    IDENTIFIED BY '<%= scope.lookupvar('private::mariadb::wikiadmin_password') %>';

GRANT SELECT, INSERT, UPDATE, DELETE, DROP, CREATE, ALTER, INDEX
    ON `%wik%`.* TO 'wikiadmin'@'%';

GRANT SELECT, INSERT, UPDATE, DELETE, DROP, CREATE, ALTER, INDEX
    ON `centralauth`.* TO 'wikiadmin'@'%';
