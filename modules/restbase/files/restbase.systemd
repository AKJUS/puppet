[Unit]
Description=Mediawiki RESTBase Service
Documentation=https://www.mediawiki.org/wiki/RESTBase
After=network.target

[Install]
WantedBy=multi-user.target

[Service]
User=restbase
Group=restbase
SyslogIdentifier=restbase
WorkingDirectory=/srv/restbase
ExecStart=/usr/bin/node /srv/restbase/server.js -c /etc/mediawiki/restbase/config.yaml
KillMode=process
Restart=on-success
PrivateTmp=true

[Install]
WantedBy=multi-user.target
