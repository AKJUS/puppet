[Unit]
Description=Mediawiki RESTBase Service
Documentation=https://www.mediawiki.org/wiki/RESTBase
Wants=local-fs.target network.target
After=local-fs.target network.target

[Install]
WantedBy=multi-user.target

[Service]
Type=simple
User=restbase
Group=restbase
WorkingDirectory=/srv/restbase
ExecStart=/usr/bin/node /srv/restbase/server.js -c /etc/mediawiki/restbase/config.yaml 2>&1 > /var/log/restbase/restbase.log
KillMode=process
Restart=on-success
PrivateTmp=true
