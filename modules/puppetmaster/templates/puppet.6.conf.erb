[main]
vardir = /opt/puppetlabs/server/data/puppetserver
logdir = /var/log/puppetlabs/puppetserver
rundir = /var/run/puppetlabs/puppetserver
pidfile = /var/run/puppetlabs/puppetserver/puppetserver.pid
codedir = /etc/puppetlabs/puppet/code

[agent]
server = <%= @puppetmaster_hostname %>
daemonize = false
http_connect_timeout = 60
http_read_timeout = 960
usecacheonfailure = false
splay = true
pluginsync = true
report = true
stringify_facts = false

[master]
<% if @use_puppetdb %>
storeconfigs = true
storeconfigs_backend = puppetdb
reports = store,puppetdb
<% end %>
certname = <%= @puppetmaster_hostname %>
basemodulepath = /etc/puppetlabs/puppet/modules

# puppetmaster($config) settings
autosign = false
default_manifest = $confdir/manifests
environmentpath = $confdir/environments
thin_storeconfigs = false

always_cache_features = true
trusted_node_data = true

# SSL
ssldir = $confdir/ssl/
ssl_client_header = SSL_CLIENT_S_DN
ssl_client_verify_header = SSL_CLIENT_VERIFY
hostcert = $confdir/ssl/certs/<%= @puppetmaster_hostname %>.pem
hostprivkey = $confdir/ssl/private_keys/<%= @puppetmaster_hostname %>.pem
